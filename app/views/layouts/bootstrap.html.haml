!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "CollaboTree"
    
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => content_for?(:description) ? yield(:description) : "CollaboTree - Grow your ideas", :name => "description"}
  
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-44039301-1', 'collabotree.com');
      ga('send', 'pageview');

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lora:400,700'

    = yield :head
  %body
    = render 'layouts/navigation'
    = yield :pre_container
    .container-fluid
      = bootstrap_flash
      .row{ style: 'height: 0;'}
        .col-lg-12.page-header
          = render 'layouts/messages'
      
      = yield
        
      %footer

