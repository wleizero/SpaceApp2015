.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h4 Come on in
          
      .panel-body
        .row
          .col-md-12
            = simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
              .form-group
                .input-group.input-group-lg
                  %span.input-group-addon
                    %i.fa.fa-at
                  = f.email_field :email, label: false, placeholder: 'email', :required => false, :autofocus => true, :wrapper => false, class: 'form-control'
              .form-group
                .input-group.input-group-lg
                  %span.input-group-addon
                    %i.fa.fa-lock
                  = f.password_field :password, label: false, placeholder: 'password', :required => false, :wrapper => false, class: 'form-control'
                  %span.input-group-btn
                    = f.button :submit, "Sign in", :class => 'btn-default btn btn-lg btn-info'
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = link_to "Forgot your password?", new_password_path(resource_name)

    .row.top-buffer
      .col-md-12
        - if devise_mapping.omniauthable?
          - resource_class.omniauth_providers.each do |provider|
            .form-group
              .input-group
                = link_to omniauth_authorize_path(resource_name, provider), :class => 'btn btn-small btn-default' do
                  %i.fa.fa-facebook
                  = "Sign in with #{provider.to_s.titleize}"


        .form-group
          .input-group
            = link_to new_registration_path(resource_name), :class => 'btn btn-lg btn-info' do
              %i.fa.fa-arrow-right
              Register

