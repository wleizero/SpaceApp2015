.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h4 
          Sign up
          
      .panel-body
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal" }) do |f|
          .row
            .col-md-4
              / = f.input :display_name, label: false, input_html: { class: 'form-control' }
              / .btn-group-vertical#character_choice
              /   %button.btn.btn-default.btn-lg{type: 'button'}
              /     = image_tag 'animals/armadillo_lg.png', class: 'animal'
              /   %button.btn.btn-default.btn-lg{type: 'button'}
              /     = image_tag 'animals/fox_lg.png', class: 'animal'
              /   %button.btn.btn-default.btn-lg{type: 'button'}
              /     = image_tag 'animals/hedgehog_lg.png', class: 'animal'
              
 
              %ul.list-group
                %li.list-group-item
                  %i.fa.fa-bitcoin  
                  0.00 bits
            .col-md-4.col-md-offset-4
              .form-group
                .col-sm-12
                  .input-group
                    %span.input-group-addon
                      %i.fa.fa-user
                    = f.input :display_name, label: false, placeholder: 'name', :required => true, :autofocus => true, input_html: { class: 'form-control' }
              .form-group
                .col-sm-12
                  .input-group
                    %span.input-group-addon
                      %i.fa.fa-at
                    = f.input :email, label: false, placeholder: 'email', :required => true, :autofocus => true, input_html: { class: 'form-control' }
              .form-group
                .col-sm-12
                  .input-group
                    %span.input-group-addon
                      %i.fa.fa-lock
                    = f.input :password, label: false, placeholder: 'password', :required => false, input_html: { class: 'form-control' }
                    
              .form-actions.pull-right
                = f.button :submit, "GO", :class => 'btn btn-lg btn-info'